{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ESNext"],
    "moduleResolution": "Bundler", // Use 'NodeNext' or 'Bundler'
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist", // Matches tsup output
    "rootDir": "./src",
    "baseUrl": ".", // Important for paths
    "paths": {
      "@/core/*": ["src/core/*"], // Alias for core logic
      "@/api/*": ["src/api/*"]   // Alias for API logic
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}